{
  "compilerOptions": {
    "target": "es5", // 필요한 경우 es5로 유지
    "lib": [
      "dom",
      "dom.iterable",
      "esnext" // 최신 ECMAScript 기능을 지원
    ],
    "allowJs": true,
    "skipLibCheck": true, // 타입 라이브러리 충돌을 방지
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true, // 엄격한 타입 검사
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["google.maps"], // Google Maps의 타입을 포함
    "typeRoots": ["./node_modules/@types"] // @types 폴더에서 타입을 가져옴
  },
  "include": [
    "src"
  ]
}
